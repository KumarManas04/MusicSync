<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/nav_bar_color</item>
    </style>

    <style name="LinearProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#bf360c</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:progressBackgroundTint">#000000</item>
    </style>

    <style name="SeekBarStyle" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">#000000</item>
        <item name="android:progressTint">#bf360c</item>
        <item name="colorControlActivated">#ffffff</item>
        <item name="android:minHeight">8dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>

</resources>
