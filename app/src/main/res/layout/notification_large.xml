<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#0e1219"
    android:orientation="horizontal"
    android:padding="0dp">

    <ImageView
        android:id="@+id/nl_song_art_image_view"
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:foreground="@drawable/image_overlay_gradient"
        android:src="@drawable/song_placeholder"
        android:contentDescription="Song art image" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="#0e1219"
        android:paddingStart="10dp"
        android:paddingEnd="15dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nl_song_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-condensed"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/nl_artist_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-condensed"
            android:singleLine="true"
            android:textColor="#e0e0e0"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/nl_previous_track_image_view"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/nl_play_pause_image_view"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/nl_next_track_image_view"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>