<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/round_button"
    android:layout_margin="0dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_playlist_image"
        android:layout_alignParentStart="true"
        android:background="@drawable/song_placeholder"
        android:layout_margin="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/item_playlist_text_view"
        android:layout_toEndOf="@id/item_playlist_image"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#eeeeee"/>

    <TextView
        android:id="@+id/item_songs_count_text_view"
        android:layout_below="@id/item_playlist_text_view"
        android:layout_toEndOf="@id/item_playlist_image"
        android:singleLine="true"
        android:layout_marginTop="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="0 Songs"
        android:textColor="#bdbdbd"/>

    <View
        android:layout_below="@id/item_playlist_image"
        android:background="#607d8b"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>